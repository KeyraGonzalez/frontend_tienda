---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
---

<Layout 
  title="Gestión de Categorías - StyleHub"
  description="Panel de administración de categorías para StyleHub."
>  
  <main class="min-h-screen bg-neutral-50">
    <!-- Loading State -->
    <div id="loading" class="flex items-center justify-center min-h-screen">
      <div class="text-center">
        <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-primary-600"></div>
        <p class="mt-2 text-neutral-600">Cargando gestión de categorías...</p>
      </div>
    </div>

    <!-- Access Denied -->
    <div id="access-denied" class="hidden flex items-center justify-center min-h-screen">
      <div class="text-center max-w-md mx-auto px-4">
        <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z" />
          </svg>
        </div>
        <h1 class="text-2xl font-bold text-neutral-900 mb-2">Acceso Denegado</h1>
        <p class="text-neutral-600 mb-6">No tienes permisos de administrador para acceder a esta página.</p>
        <a href="/" class="bg-primary-600 text-white px-6 py-2 rounded-lg font-medium hover:bg-primary-700 transition-colors">
          Volver al inicio
        </a>
      </div>
    </div>

    <!-- Categories Management Panel -->
    <div id="categories-panel" class="hidden">
      <!-- Header -->
      <div class="bg-black text-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex items-center justify-between h-20">
            <div class="flex items-center">
              <a href="/admin" class="flex items-center text-white hover:text-gray-300 mr-6 font-medium tracking-wide uppercase">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                PANEL PRINCIPAL
              </a>
              <h1 class="text-2xl font-bold tracking-wide uppercase">GESTIÓN DE CATEGORÍAS</h1>
            </div>
            <div class="flex items-center space-x-4">
              <button id="add-category-btn" class="bg-white text-black px-6 py-3 rounded-lg font-medium hover:bg-gray-100 transition-colors tracking-wide uppercase">
                <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                </svg>
                AÑADIR CATEGORÍA
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Content Container -->
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
          <div class="bg-white rounded-lg shadow-sm p-6 border-2 border-black">
            <div class="flex items-center">
              <div class="w-12 h-12 bg-black rounded-lg flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                </svg>
              </div>
              <div>
                <p class="text-sm font-medium text-gray-600 tracking-wide uppercase">Total Categorías</p>
                <p class="text-2xl font-bold text-black" id="total-categories">0</p>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-lg shadow-sm p-6 border-2 border-black">
            <div class="flex items-center">
              <div class="w-12 h-12 bg-black rounded-lg flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <p class="text-sm font-medium text-gray-600 tracking-wide uppercase">Categorías Activas</p>
                <p class="text-2xl font-bold text-black" id="active-categories">0</p>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-lg shadow-sm p-6 border-2 border-black">
            <div class="flex items-center">
              <div class="w-12 h-12 bg-black rounded-lg flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                </svg>
              </div>
              <div>
                <p class="text-sm font-medium text-gray-600 tracking-wide uppercase">Con Productos</p>
                <p class="text-2xl font-bold text-black" id="categories-with-products">0</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Categories Filter -->
        <div class="bg-white rounded-lg shadow-sm border-2 border-black p-4 mb-6">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
              <label class="block text-sm font-bold text-black mb-1 tracking-wide uppercase">Buscar</label>
              <input type="text" id="categories-search" placeholder="Nombre de categoría..." class="w-full px-3 py-2 border-2 border-black rounded-lg focus:ring-2 focus:ring-black focus:border-black text-sm">
            </div>
            <div>
              <label class="block text-sm font-bold text-black mb-1 tracking-wide uppercase">Estado</label>
              <select id="categories-status" class="w-full px-3 py-2 border-2 border-black rounded-lg focus:ring-2 focus:ring-black focus:border-black text-sm">
                <option value="">Todas</option>
                <option value="true">Activas</option>
                <option value="false">Inactivas</option>
              </select>
            </div>
            <div class="flex items-end">
              <button id="categories-filter-btn" class="w-full bg-black text-white px-4 py-2 rounded-lg hover:bg-gray-800 transition-colors font-bold tracking-wide uppercase">
                Filtrar
              </button>
            </div>
          </div>
        </div>

        <!-- Categories Grid -->
        <div id="categories-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
          <!-- Las categorías aparecerán aquí -->
        </div>

        <!-- Loading indicator -->
        <div id="categories-loading" class="text-center py-8">
          <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-black"></div>
          <p class="mt-2 text-black font-medium tracking-wide">Cargando categorías...</p>
        </div>

        <!-- Empty state -->
        <div id="categories-empty" class="hidden text-center py-12">
          <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            </svg>
          </div>
          <h3 class="text-lg font-bold text-black mb-2 tracking-wide uppercase">No hay categorías</h3>
          <p class="text-gray-600 mb-6">Comienza creando tu primera categoría</p>
          <button class="bg-black text-white px-6 py-2 rounded-lg font-bold tracking-wide uppercase hover:bg-gray-800 transition-colors">
            Crear Categoría
          </button>
        </div>
      </div>
    </div>
  </main>

  <!-- Category Modal -->
  <div id="category-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-lg shadow-xl max-w-2xl w-full max-h-[90vh] overflow-y-auto border-2 border-black">
      <div class="p-6">
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-xl font-bold text-black tracking-wide uppercase" id="category-modal-title">Añadir Categoría</h3>
          <button id="close-category-modal" class="text-black hover:text-gray-600">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>

        <form id="category-form" class="space-y-6">
          <input type="hidden" id="category-id" name="id">
          
          <div class="space-y-4">
            <div>
              <label class="block text-sm font-bold text-black mb-1 tracking-wide uppercase">Nombre de la Categoría *</label>
              <input type="text" id="category-name" name="name" required 
                     class="w-full px-3 py-2 border-2 border-black rounded-lg focus:ring-2 focus:ring-black focus:border-black"
                     placeholder="Ej: Ropa Masculina, Electrónicos...">
            </div>

            <div>
              <label class="block text-sm font-bold text-black mb-1 tracking-wide uppercase">Descripción</label>
              <textarea id="category-description" name="description" rows="3"
                        class="w-full px-3 py-2 border-2 border-black rounded-lg focus:ring-2 focus:ring-black focus:border-black"
                        placeholder="Descripción opcional de la categoría"></textarea>
            </div>

            <div>
              <label class="block text-sm font-bold text-black mb-2 tracking-wide uppercase">Imagen de la Categoría</label>
              <div class="border-2 border-dashed border-black rounded-lg p-4 text-center">
                <input type="file" id="category-image" accept="image/*" class="hidden">
                <div id="image-upload-area">
                  <label for="category-image" class="cursor-pointer">
                    <svg class="mx-auto h-12 w-12 text-black" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                      <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                    <div class="mt-2">
                      <span class="text-sm text-black font-bold tracking-wide uppercase">Subir imagen</span>
                      <span class="text-sm text-gray-600"> o arrastrar y soltar</span>
                    </div>
                    <p class="text-xs text-gray-600 mt-1">PNG, JPG, GIF hasta 5MB</p>
                  </label>
                </div>
                <div id="image-preview-area" class="hidden">
                  <img id="category-image-preview" class="mx-auto h-32 w-32 object-cover rounded-lg border-2 border-black" alt="Vista previa">
                  <button type="button" id="remove-image-btn" class="mt-2 text-red-600 hover:text-red-800 text-sm font-medium">
                    Eliminar imagen
                  </button>
                </div>
              </div>
            </div>

            <div class="flex items-center">
              <label class="flex items-center">
                <input type="checkbox" id="category-active" name="is_active" checked class="rounded border-black text-black focus:ring-black">
                <span class="ml-2 text-sm text-black font-medium tracking-wide">Categoría activa</span>
              </label>
            </div>
          </div>

          <div class="flex justify-end space-x-3 pt-6 border-t-2 border-black">
            <button type="button" id="cancel-category-btn" 
                    class="px-6 py-2 text-black bg-white border-2 border-black rounded-lg hover:bg-gray-50 transition-colors font-bold tracking-wide uppercase">
              Cancelar
            </button>
            <button type="submit" id="save-category-btn" 
                    class="px-6 py-2 bg-black text-white rounded-lg hover:bg-gray-800 transition-colors font-bold tracking-wide uppercase">
              Guardar Categoría
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Delete Confirmation Modal -->
  <div id="delete-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-lg shadow-xl max-w-md w-full border-2 border-black">
      <div class="p-6">
        <div class="flex items-center mb-4">
          <div class="w-12 h-12 bg-red-100 rounded-full flex items-center justify-center mr-4">
            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z" />
            </svg>
          </div>
          <div>
            <h3 class="text-lg font-bold text-black tracking-wide uppercase">Confirmar Eliminación</h3>
            <p class="text-sm text-gray-600">Esta acción no se puede deshacer</p>
          </div>
        </div>
        
        <p class="text-black mb-6" id="delete-message">
          ¿Estás seguro de que quieres eliminar esta categoría?
        </p>

        <div class="flex justify-end space-x-3">
          <button type="button" id="cancel-delete-btn" 
                  class="px-4 py-2 text-black bg-white border-2 border-black rounded-lg hover:bg-gray-50 transition-colors font-bold tracking-wide uppercase">
            Cancelar
          </button>
          <button type="button" id="confirm-delete-btn" 
                  class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors font-bold tracking-wide uppercase">
            Eliminar
          </button>
        </div>
      </div>
    </div>
  </div>

</Layout>

<script>
  import { initializeCategoriesPage } from '../../scripts/admin/categorias';
  
  document.addEventListener('DOMContentLoaded', async function() {
    await initializeCategoriesPage();
  });
</script>
