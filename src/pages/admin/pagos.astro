---
import Layout from '../../layouts/Layout.astro';
---

<Layout 
  title="Gestión de Pagos - StyleHub"
  description="Panel de administración de pagos para StyleHub."
>
  
  <main class="min-h-screen bg-white">
    <!-- Loading State -->
    <div id="loading" class="flex items-center justify-center min-h-screen">
      <div class="text-center">
        <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-black"></div>
        <p class="mt-2 text-black font-medium tracking-wide">Cargando gestión de pagos...</p>
      </div>
    </div>

    <!-- Access Denied -->
    <div id="access-denied" class="hidden flex items-center justify-center min-h-screen">
      <div class="text-center max-w-md mx-auto px-4">
        <div class="w-16 h-16 bg-white border-2 border-black rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-black" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z" />
          </svg>
        </div>
        <h1 class="text-2xl font-bold text-black mb-2 tracking-wide uppercase">Acceso Denegado</h1>
        <p class="text-gray-600 mb-6">No tienes permisos de administrador para acceder a esta página.</p>
        <a href="/" class="bg-black text-white px-6 py-2 rounded-lg font-bold hover:bg-gray-800 transition-colors tracking-wide uppercase">
          Volver al inicio
        </a>
      </div>
    </div>

    <!-- Payments Management Panel -->
    <div id="payments-panel" class="hidden">
      <!-- Header -->
      <div class="bg-black text-white border-b-2 border-black">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex items-center justify-between h-20">
            <div class="flex items-center">
              <a href="/admin" class="flex items-center text-white hover:text-gray-300 mr-6">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                Panel Principal
              </a>
              <h1 class="text-2xl font-bold tracking-wide uppercase">Gestión de Pagos</h1>
            </div>
            <div class="flex items-center space-x-4">
              <button id="export-payments-btn" class="bg-white text-black px-4 py-2 rounded-lg font-bold hover:bg-gray-100 transition-colors tracking-wide uppercase">
                <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                Exportar
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Content Container -->
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Summary Cards -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
          <div class="bg-white rounded-lg shadow-sm p-6 border-2 border-black">
            <div class="flex items-center">
              <div class="w-12 h-12 bg-black rounded-lg flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1" />
                </svg>
              </div>
              <div>
                <p class="text-sm font-bold text-black tracking-wide uppercase">Ingresos Hoy</p>
                <p class="text-2xl font-bold text-black" id="payments-today">$0</p>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-lg shadow-sm p-6 border-2 border-black">
            <div class="flex items-center">
              <div class="w-12 h-12 bg-black rounded-lg flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                </svg>
              </div>
              <div>
                <p class="text-sm font-bold text-black tracking-wide uppercase">Ingresos Mes</p>
                <p class="text-2xl font-bold text-black" id="payments-month">$0</p>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-lg shadow-sm p-6 border-2 border-black">
            <div class="flex items-center">
              <div class="w-12 h-12 bg-black rounded-lg flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <p class="text-sm font-bold text-black tracking-wide uppercase">Pagos Pendientes</p>
                <p class="text-2xl font-bold text-black" id="payments-pending">0</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Payments Filter -->
        <div class="bg-white rounded-lg shadow-sm border-2 border-black p-4 mb-6">
          <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
            <div>
              <label class="block text-sm font-bold text-black mb-1 tracking-wide uppercase">Buscar</label>
              <input type="text" id="payments-search" placeholder="ID transacción, email..." class="w-full px-3 py-2 border-2 border-black rounded-lg focus:outline-none focus:ring-2 focus:ring-black">
            </div>
            <div>
              <label class="block text-sm font-bold text-black mb-1 tracking-wide uppercase">Estado</label>
              <select id="payments-status" class="w-full px-3 py-2 border-2 border-black rounded-lg focus:outline-none focus:ring-2 focus:ring-black">
                <option value="">Todos</option>
                <option value="completed">Completado</option>
                <option value="pending">Pendiente</option>
                <option value="failed">Fallido</option>
                <option value="refunded">Reembolsado</option>
                <option value="processing">Procesando</option>
              </select>
            </div>
            <div>
              <label class="block text-sm font-bold text-black mb-1 tracking-wide uppercase">Método</label>
              <select id="payments-method" class="w-full px-3 py-2 border-2 border-black rounded-lg focus:outline-none focus:ring-2 focus:ring-black">
                <option value="">Todos</option>
                <option value="stripe">Stripe</option>
                <option value="paypal">PayPal</option>
                <option value="transfer">Transferencia</option>
              </select>
            </div>
            <div>
              <label class="block text-sm font-bold text-black mb-1 tracking-wide uppercase">Fecha desde</label>
              <input type="date" id="payments-date-from" class="w-full px-3 py-2 border-2 border-black rounded-lg focus:outline-none focus:ring-2 focus:ring-black">
            </div>
            <div class="flex items-end">
              <button id="payments-filter-btn" class="w-full bg-black text-white px-4 py-2 rounded-lg hover:bg-gray-800 transition-colors font-bold tracking-wide uppercase">
                Filtrar
              </button>
            </div>
          </div>
        </div>

        <!-- Payments Table -->
        <div class="bg-white rounded-lg shadow-sm border-2 border-black overflow-hidden">
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-black">
              <thead class="bg-black">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-bold text-white uppercase tracking-wider">ID</th>
                  <th class="px-6 py-3 text-left text-xs font-bold text-white uppercase tracking-wider">Orden</th>
                  <th class="px-6 py-3 text-left text-xs font-bold text-white uppercase tracking-wider">Cliente</th>
                  <th class="px-6 py-3 text-left text-xs font-bold text-white uppercase tracking-wider">Monto</th>
                  <th class="px-6 py-3 text-left text-xs font-bold text-white uppercase tracking-wider">Método</th>
                  <th class="px-6 py-3 text-left text-xs font-bold text-white uppercase tracking-wider">Estado</th>
                  <th class="px-6 py-3 text-left text-xs font-bold text-white uppercase tracking-wider">Fecha</th>
                  <th class="px-6 py-3 text-left text-xs font-bold text-white uppercase tracking-wider">Acciones</th>
                </tr>
              </thead>
              <tbody id="payments-table-body" class="bg-white divide-y divide-gray-200">
                <tr>
                  <td colspan="8" class="px-6 py-4 text-center text-black">
                    Cargando pagos...
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
          <div class="bg-white px-4 py-3 border-t border-black sm:px-6">
            <div id="payments-pagination" class="flex items-center justify-between">
              <div class="text-sm text-black font-medium">Mostrando pagos</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

</Layout>

<script>
  import { initializePagosPage } from '../../scripts/admin/pagos';
  
  document.addEventListener('DOMContentLoaded', async function() {
    await initializePagosPage();
  });
</script>
