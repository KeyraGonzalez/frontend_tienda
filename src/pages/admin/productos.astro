---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
---

<Layout 
  title="Gestión de Productos - StyleHub"
  description="Panel de administración de productos para StyleHub."
>  
  <main class="min-h-screen bg-neutral-50">
    <!-- Loading State -->
    <div id="loading" class="flex items-center justify-center min-h-screen">
      <div class="text-center">
        <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-primary-600"></div>
        <p class="mt-2 text-neutral-600">Cargando gestión de productos...</p>
      </div>
    </div>

    <!-- Access Denied -->
    <div id="access-denied" class="hidden flex items-center justify-center min-h-screen">
      <div class="text-center max-w-md mx-auto px-4">
        <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z" />
          </svg>
        </div>
        <h1 class="text-2xl font-bold text-neutral-900 mb-2">Acceso Denegado</h1>
        <p class="text-neutral-600 mb-6">No tienes permisos de administrador para acceder a esta página.</p>
        <a href="/" class="bg-primary-600 text-white px-6 py-2 rounded-lg font-medium hover:bg-primary-700 transition-colors">
          Volver al inicio
        </a>
      </div>
    </div>

    <!-- Products Management Panel -->
    <div id="products-panel" class="hidden">
      <!-- Header -->
      <div class="bg-black text-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex items-center justify-between h-20">
            <div class="flex items-center">
              <a href="/admin" class="flex items-center text-white hover:text-gray-300 mr-6 font-medium tracking-wide uppercase">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                PANEL PRINCIPAL
              </a>
              <h1 class="text-2xl font-bold tracking-wide uppercase">GESTIÓN DE PRODUCTOS</h1>
            </div>
            <div class="flex items-center space-x-4">
              <button id="add-product-btn" class="bg-white text-black px-6 py-3 rounded-lg font-medium hover:bg-gray-100 transition-colors tracking-wide uppercase">
                <svg class="w-5 h-5 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                </svg>
                AÑADIR PRODUCTO
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Content Container -->
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
          <div class="bg-white rounded-lg shadow-sm p-6 border-2 border-black">
            <div class="flex items-center">
              <div class="w-12 h-12 bg-black rounded-lg flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                </svg>
              </div>
              <div>
                <p class="text-sm font-medium text-gray-600 tracking-wide uppercase">Total Productos</p>
                <p class="text-2xl font-bold text-black" id="total-products">0</p>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-lg shadow-sm p-6 border-2 border-black">
            <div class="flex items-center">
              <div class="w-12 h-12 bg-black rounded-lg flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <p class="text-sm font-medium text-gray-600 tracking-wide uppercase">Productos Activos</p>
                <p class="text-2xl font-bold text-black" id="active-products">0</p>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-lg shadow-sm p-6 border-2 border-black">
            <div class="flex items-center">
              <div class="w-12 h-12 bg-black rounded-lg flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z" />
                </svg>
              </div>
              <div>
                <p class="text-sm font-medium text-gray-600 tracking-wide uppercase">Stock Bajo</p>
                <p class="text-2xl font-bold text-black" id="low-stock-products">0</p>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-lg shadow-sm p-6 border-2 border-black">
            <div class="flex items-center">
              <div class="w-12 h-12 bg-black rounded-lg flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                </svg>
              </div>
              <div>
                <p class="text-sm font-medium text-gray-600 tracking-wide uppercase">Destacados</p>
                <p class="text-2xl font-bold text-black" id="featured-products">0</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Products Filter -->
        <div class="bg-white rounded-lg shadow-sm border-2 border-black p-4 mb-6">
          <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div>
              <label class="block text-sm font-bold text-black mb-1 tracking-wide uppercase">Buscar</label>
              <input type="text" id="products-search" placeholder="Nombre, SKU..." class="w-full px-3 py-2 border-2 border-black rounded-lg focus:ring-2 focus:ring-black focus:border-black text-sm">
            </div>
            <div>
              <label class="block text-sm font-bold text-black mb-1 tracking-wide uppercase">Categoría</label>
              <select id="products-category" class="w-full px-3 py-2 border-2 border-black rounded-lg focus:ring-2 focus:ring-black focus:border-black text-sm">
                <option value="">Todas las categorías</option>
              </select>
            </div>
            <div>
              <label class="block text-sm font-bold text-black mb-1 tracking-wide uppercase">Estado</label>
              <select id="products-status" class="w-full px-3 py-2 border-2 border-black rounded-lg focus:ring-2 focus:ring-black focus:border-black text-sm">
                <option value="">Todos</option>
                <option value="true">Activo</option>
                <option value="false">Inactivo</option>
              </select>
            </div>
            <div class="flex items-end">
              <button id="products-filter-btn" class="w-full bg-black text-white px-4 py-2 rounded-lg hover:bg-gray-800 transition-colors font-bold tracking-wide uppercase">
                Filtrar
              </button>
            </div>
          </div>
        </div>

        <!-- Products Table -->
        <div class="bg-white rounded-lg shadow-sm border-2 border-black overflow-hidden">
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-black">
              <thead class="bg-black">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-bold text-white uppercase tracking-wide">Producto</th>
                  <th class="px-6 py-3 text-left text-xs font-bold text-white uppercase tracking-wide">Categoría</th>
                  <th class="px-6 py-3 text-left text-xs font-bold text-white uppercase tracking-wide">Precio</th>
                  <th class="px-6 py-3 text-left text-xs font-bold text-white uppercase tracking-wide">Stock</th>
                  <th class="px-6 py-3 text-left text-xs font-bold text-white uppercase tracking-wide">Destacado</th>
                  <th class="px-6 py-3 text-left text-xs font-bold text-white uppercase tracking-wide">Estado</th>
                  <th class="px-6 py-3 text-left text-xs font-bold text-white uppercase tracking-wide">Acciones</th>
                </tr>
              </thead>
              <tbody id="products-table-body" class="bg-white divide-y divide-gray-200">
                <tr>
                  <td colspan="7" class="px-6 py-4 text-center text-black font-medium tracking-wide">
                    Cargando productos...
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
          <div class="bg-white px-4 py-3 border-t-2 border-black sm:px-6">
            <div id="products-pagination" class="flex items-center justify-between">
              <div class="text-sm text-black font-medium tracking-wide">Mostrando productos</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- Product Modal (Mejorado) -->
  <div id="product-modal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-lg shadow-xl max-w-6xl w-full max-h-[90vh] overflow-y-auto border-2 border-black">
      <div class="p-6">
        <!-- Header del modal -->
        <div class="flex items-center justify-between mb-6 pb-4 border-b-2 border-black">
          <h3 class="text-2xl font-bold text-black tracking-wide uppercase" id="product-modal-title">Añadir Producto</h3>
          <button id="close-product-modal" class="text-black hover:text-gray-600 p-2 hover:bg-gray-100 rounded-lg transition-colors">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>

        <!-- Progress indicator -->
        <div class="mb-6">
          <div class="flex items-center justify-between text-sm text-gray-600 mb-2">
            <span>Progreso del formulario</span>
            <span id="form-progress">0%</span>
          </div>
          <div class="w-full bg-gray-200 rounded-full h-2">
            <div id="progress-bar" class="bg-black h-2 rounded-full transition-all duration-300" style="width: 0%"></div>
          </div>
        </div>

        <form id="product-form" class="space-y-8">
          <input type="hidden" id="product-id" name="id">
          
          <!-- Tabs Navigation -->
          <div class="border-b border-gray-200">
            <nav class="-mb-px flex space-x-8">
              <button type="button" class="tab-button active py-2 px-1 border-b-2 border-black font-medium text-sm text-black tracking-wide uppercase" data-tab="basic">
                Información Básica
              </button>
              <button type="button" class="tab-button py-2 px-1 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700 hover:border-gray-300 tracking-wide uppercase" data-tab="images">
                Imágenes
              </button>
            </nav>
          </div>

          <!-- Tab Content -->
          <div class="tab-content">
            
            <!-- Basic Information Tab -->
            <div id="tab-basic" class="tab-panel active">
              <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                <!-- Left Column -->
                <div class="space-y-6">
                  <div class="bg-gray-50 p-4 rounded-lg border-2 border-gray-200">
                    <h4 class="text-lg font-bold text-black tracking-wide uppercase mb-4">Datos Principales</h4>
                    
                    <div class="space-y-4">
                      <div>
                        <label class="block text-sm font-bold text-black mb-2 tracking-wide uppercase">Nombre del Producto *</label>
                        <input type="text" id="product-name" name="name" required 
                               class="w-full px-4 py-3 border-2 border-black rounded-lg focus:ring-2 focus:ring-black focus:border-black text-lg"
                               placeholder="Ej: Camiseta Premium de Algodón">
                        <p class="text-xs text-gray-600 mt-1">Este será el título principal del producto</p>
                      </div>

                      <div>
                        <label class="block text-sm font-bold text-black mb-2 tracking-wide uppercase">Descripción Completa</label>
                        <textarea id="product-description" name="description" rows="8"
                                  class="w-full px-4 py-3 border-2 border-black rounded-lg focus:ring-2 focus:ring-black focus:border-black"
                                  placeholder="Descripción detallada del producto, características, materiales..."></textarea>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Right Column -->
                <div class="space-y-6">
                  <div class="bg-gray-50 p-4 rounded-lg border-2 border-gray-200">
                    <h4 class="text-lg font-bold text-black tracking-wide uppercase mb-4">Precios y Stock</h4>
                    
                    <div class="space-y-4">
                      <div class="grid grid-cols-2 gap-4">
                        <div>
                          <label class="block text-sm font-bold text-black mb-2 tracking-wide uppercase">Precio *</label>
                          <div class="relative">
                            <span class="absolute left-3 top-3 text-black font-bold">$</span>
                            <input type="number" id="product-price" name="price" step="0.01" min="0" required 
                                   class="w-full pl-8 pr-4 py-3 border-2 border-black rounded-lg focus:ring-2 focus:ring-black focus:border-black text-lg">
                          </div>
                        </div>
                        <div>
                          <label class="block text-sm font-bold text-black mb-2 tracking-wide uppercase">Precio Original</label>
                          <div class="relative">
                            <span class="absolute left-3 top-3 text-gray-500">$</span>
                            <input type="number" id="product-original-price" name="original_price" step="0.01" min="0" 
                                   class="w-full pl-8 pr-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-black focus:border-black">
                          </div>
                          <p class="text-xs text-gray-600 mt-1">Precio antes del descuento (opcional)</p>
                        </div>
                      </div>

                      <div class="grid grid-cols-2 gap-4">
                        <div>
                          <label class="block text-sm font-bold text-black mb-2 tracking-wide uppercase">Marca</label>
                          <input type="text" id="product-brand" name="brand" 
                                 class="w-full px-4 py-3 border-2 border-black rounded-lg focus:ring-2 focus:ring-black focus:border-black"
                                 placeholder="Ej: Nike, Adidas, Zara...">
                        </div>
                        <div>
                          <label class="block text-sm font-bold text-black mb-2 tracking-wide uppercase">Descuento (%)</label>
                          <input type="number" id="product-discount" name="discount_percentage" min="0" max="100" 
                                 class="w-full px-4 py-3 border-2 border-black rounded-lg focus:ring-2 focus:ring-black focus:border-black">
                          <p class="text-xs text-gray-600 mt-1">Porcentaje de descuento (0-100)</p>
                        </div>
                      </div>

                      <div class="grid grid-cols-2 gap-4">
                        <div>
                          <label class="block text-sm font-bold text-black mb-2 tracking-wide uppercase">Stock Inicial *</label>
                          <input type="number" id="product-stock" name="stock_quantity" min="0" required 
                                 class="w-full px-4 py-3 border-2 border-black rounded-lg focus:ring-2 focus:ring-black focus:border-black">
                        </div>
                        <div>
                          <label class="block text-sm font-bold text-black mb-2 tracking-wide uppercase">SKU</label>
                          <input type="text" id="product-sku" name="sku" 
                                 class="w-full px-4 py-3 border-2 border-black rounded-lg focus:ring-2 focus:ring-black focus:border-black"
                                 placeholder="Código único del producto">
                        </div>
                      </div>

                      <div>
                        <label class="block text-sm font-bold text-black mb-2 tracking-wide uppercase">Rating Inicial</label>
                        <div class="flex items-center space-x-4">
                          <input type="number" id="product-rating" name="rating" step="0.1" min="0" max="5" 
                                 class="w-32 px-4 py-3 border-2 border-black rounded-lg focus:ring-2 focus:ring-black focus:border-black"
                                 placeholder="4.5">
                          <div class="flex items-center space-x-1" id="rating-stars">
                            <svg class="w-5 h-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                            </svg>
                            <svg class="w-5 h-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                            </svg>
                            <svg class="w-5 h-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                            </svg>
                            <svg class="w-5 h-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                            </svg>
                            <svg class="w-5 h-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                            </svg>
                          </div>
                          <span class="text-sm text-gray-600">de 5 estrellas</span>
                        </div>
                        <p class="text-xs text-gray-600 mt-1">Rating inicial del producto (0.0 - 5.0)</p>
                      </div>
                    </div>
                  </div>

                  <div class="bg-gray-50 p-4 rounded-lg border-2 border-gray-200">
                    <h4 class="text-lg font-bold text-black tracking-wide uppercase mb-4">Categorización</h4>
                    
                    <div class="space-y-4">
                      <div>
                        <label class="block text-sm font-bold text-black mb-2 tracking-wide uppercase">Categoría Principal *</label>
                        <select id="product-category" name="category_id" required 
                                class="w-full px-4 py-3 border-2 border-black rounded-lg focus:ring-2 focus:ring-black focus:border-black">
                          <option value="">Seleccionar categoría</option>
                        </select>
                      </div>

                      <div>
                        <label class="block text-sm font-bold text-black mb-2 tracking-wide uppercase">Etiquetas</label>
                        <input type="text" id="product-tags" name="tags" 
                               class="w-full px-4 py-3 border-2 border-black rounded-lg focus:ring-2 focus:ring-black focus:border-black"
                               placeholder="verano, casual, algodón (separadas por comas)">
                        <p class="text-xs text-gray-600 mt-1">Palabras clave separadas por comas</p>
                      </div>
                    </div>
                  </div>

                  <div class="bg-gray-50 p-4 rounded-lg border-2 border-gray-200">
                    <h4 class="text-lg font-bold text-black tracking-wide uppercase mb-4">Configuraciones</h4>
                    
                    <div class="space-y-4">
                      <div class="grid grid-cols-2 gap-4">
                        <div>
                          <label class="block text-sm font-bold text-black mb-2 tracking-wide uppercase">Peso (kg)</label>
                          <input type="number" id="product-weight" name="weight" step="0.01" min="0" 
                                 class="w-full px-4 py-3 border-2 border-black rounded-lg focus:ring-2 focus:ring-black focus:border-black">
                        </div>
                        <div>
                          <label class="block text-sm font-bold text-black mb-2 tracking-wide uppercase">Estado</label>
                          <select id="product-status" name="is_active" 
                                  class="w-full px-4 py-3 border-2 border-black rounded-lg focus:ring-2 focus:ring-black focus:border-black">
                            <option value="true">Activo</option>
                            <option value="false">Inactivo</option>
                          </select>
                        </div>
                      </div>

                      <div class="flex items-center space-x-6">
                        <label class="flex items-center cursor-pointer">
                          <input type="checkbox" id="product-featured" name="featured" class="rounded border-2 border-black text-black focus:ring-black w-5 h-5">
                          <span class="ml-3 text-sm text-black font-bold tracking-wide uppercase">Producto Destacado</span>
                        </label>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Images Tab -->
            <div id="tab-images" class="tab-panel hidden">
              <div class="bg-gray-50 p-6 rounded-lg border-2 border-gray-200">
                <h4 class="text-lg font-bold text-black tracking-wide uppercase mb-4">Gestión de Imágenes</h4>
                
                <div class="space-y-6">
                  <!-- Upload Area -->
                  <div>
                    <label class="block text-sm font-bold text-black mb-3 tracking-wide uppercase">Subir Imágenes del Producto</label>
                    <div class="border-2 border-dashed border-black rounded-lg p-8 text-center hover:border-gray-600 transition-colors">
                      <input type="file" id="product-images" multiple accept="image/*" class="hidden">
                      <label for="product-images" class="cursor-pointer block">
                        <svg class="mx-auto h-16 w-16 text-black mb-4" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                          <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                        <div class="mb-3">
                          <span class="text-lg text-black font-bold tracking-wide uppercase">Subir archivos</span>
                          <span class="text-gray-600"> o arrastrar y soltar aquí</span>
                        </div>
                        <p class="text-sm text-gray-600">PNG, JPG, WEBP hasta 5MB cada uno</p>
                        <p class="text-xs text-gray-500 mt-2">Se recomienda imágenes de al menos 800x800px</p>
                      </label>
                    </div>
                  </div>

                  <!-- Image Preview Grid -->
                  <div>
                    <h5 class="text-md font-bold text-black tracking-wide uppercase mb-3">Vista Previa de Imágenes</h5>
                    <div id="image-preview" class="grid grid-cols-2 md:grid-cols-4 gap-4 min-h-[100px]">
                      <div class="flex items-center justify-center text-gray-400 border-2 border-dashed border-gray-300 rounded-lg p-4">
                        <span class="text-sm">Las imágenes aparecerán aquí</span>
                      </div>
                    </div>
                    <p class="text-sm text-gray-600 mt-3">
                      <strong>Tip:</strong> La primera imagen será la imagen principal del producto. Puedes reordenar arrastrando las imágenes.
                    </p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Variants Tab -->
            <div id="tab-variants" class="tab-panel hidden">
              <div class="bg-gray-50 p-6 rounded-lg border-2 border-gray-200">
                <h4 class="text-lg font-bold text-black tracking-wide uppercase mb-4">Variantes del Producto</h4>
                
                <div class="space-y-6">
                  <div class="bg-white p-4 rounded-lg border border-gray-300">
                    <p class="text-sm text-gray-600 mb-4">
                      Las variantes te permiten crear diferentes versiones del mismo producto (tallas, colores, etc.)
                    </p>
                    
                    <!-- Variant Controls -->
                    <div class="flex items-center justify-between mb-4">
                      <h5 class="text-md font-bold text-black tracking-wide uppercase">Gestión de Variantes</h5>
                      <button type="button" id="add-variant-btn" class="bg-black text-white px-4 py-2 rounded-lg text-sm font-bold tracking-wide uppercase hover:bg-gray-800 transition-colors">
                        + Añadir Variante
                      </button>
                    </div>

                    <!-- Variants List -->
                    <div id="variants-list" class="space-y-3">
                      <div class="text-center text-gray-500 py-4">
                        No hay variantes creadas. Haz clic en "Añadir Variante" para comenzar.
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- SEO Tab -->
            <div id="tab-seo" class="tab-panel hidden">
              <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                <!-- SEO Section -->
                <div class="bg-gray-50 p-6 rounded-lg border-2 border-gray-200">
                  <h4 class="text-lg font-bold text-black tracking-wide uppercase mb-4">Optimización SEO</h4>
                  
                  <div class="space-y-4">
                    <div>
                      <label class="block text-sm font-bold text-black mb-2 tracking-wide uppercase">Meta Título</label>
                      <input type="text" id="product-meta-title" name="meta_title" 
                             class="w-full px-4 py-3 border-2 border-black rounded-lg focus:ring-2 focus:ring-black focus:border-black"
                             placeholder="Título optimizado para buscadores">
                      <div class="text-xs text-gray-600 mt-1">
                        <span id="meta-title-count">0</span>/60 caracteres recomendados
                      </div>
                    </div>

                    <div>
                      <label class="block text-sm font-bold text-black mb-2 tracking-wide uppercase">Meta Descripción</label>
                      <textarea id="product-meta-description" name="meta_description" rows="3"
                                class="w-full px-4 py-3 border-2 border-black rounded-lg focus:ring-2 focus:ring-black focus:border-black"
                                placeholder="Descripción que aparece en los resultados de búsqueda"></textarea>
                      <div class="text-xs text-gray-600 mt-1">
                        <span id="meta-description-count">0</span>/160 caracteres recomendados
                      </div>
                    </div>

                    <div>
                      <label class="block text-sm font-bold text-black mb-2 tracking-wide uppercase">URL Amigable</label>
                      <input type="text" id="product-slug" name="slug" 
                             class="w-full px-4 py-3 border-2 border-black rounded-lg focus:ring-2 focus:ring-black focus:border-black"
                             placeholder="producto-ejemplo">
                      <p class="text-xs text-gray-600 mt-1">Se generará automáticamente del nombre si se deja vacío</p>
                    </div>
                  </div>
                </div>

                <!-- Advanced Settings -->
                <div class="bg-gray-50 p-6 rounded-lg border-2 border-gray-200">
                  <h4 class="text-lg font-bold text-black tracking-wide uppercase mb-4">Configuración Avanzada</h4>
                  
                  <div class="space-y-4">
                    <div>
                      <label class="block text-sm font-bold text-black mb-2 tracking-wide uppercase">Dimensiones (cm)</label>
                      <div class="grid grid-cols-3 gap-2">
                        <input type="number" id="product-length" name="length" step="0.1" min="0" 
                               class="px-3 py-2 border-2 border-black rounded-lg focus:ring-2 focus:ring-black focus:border-black text-sm"
                               placeholder="Largo">
                        <input type="number" id="product-width" name="width" step="0.1" min="0" 
                               class="px-3 py-2 border-2 border-black rounded-lg focus:ring-2 focus:ring-black focus:border-black text-sm"
                               placeholder="Ancho">
                        <input type="number" id="product-height" name="height" step="0.1" min="0" 
                               class="px-3 py-2 border-2 border-black rounded-lg focus:ring-2 focus:ring-black focus:border-black text-sm"
                               placeholder="Alto">
                      </div>
                    </div>

                    <div>
                      <label class="block text-sm font-bold text-black mb-2 tracking-wide uppercase">Stock Mínimo</label>
                      <input type="number" id="product-min-stock" name="min_stock" min="0" 
                             class="w-full px-4 py-3 border-2 border-black rounded-lg focus:ring-2 focus:ring-black focus:border-black"
                             placeholder="Cantidad mínima antes de alertar">
                    </div>

                    <div>
                      <label class="block text-sm font-bold text-black mb-2 tracking-wide uppercase">Código de Barras</label>
                      <input type="text" id="product-barcode" name="barcode" 
                             class="w-full px-4 py-3 border-2 border-black rounded-lg focus:ring-2 focus:ring-black focus:border-black"
                             placeholder="Código de barras del producto">
                    </div>

                    <div class="space-y-3">
                      <label class="flex items-center cursor-pointer">
                        <input type="checkbox" id="product-track-stock" name="track_stock" class="rounded border-2 border-black text-black focus:ring-black w-5 h-5">
                        <span class="ml-3 text-sm text-black font-bold tracking-wide uppercase">Gestionar Stock</span>
                      </label>
                      
                      <label class="flex items-center cursor-pointer">
                        <input type="checkbox" id="product-allow-backorder" name="allow_backorder" class="rounded border-2 border-black text-black focus:ring-black w-5 h-5">
                        <span class="ml-3 text-sm text-black font-bold tracking-wide uppercase">Permitir Pedidos sin Stock</span>
                      </label>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Form Actions -->
          <div class="flex justify-between items-center pt-6 border-t-2 border-black">
            <div class="flex space-x-3">
              <button type="button" id="prev-tab-btn" class="px-4 py-2 text-black bg-white border-2 border-black rounded-lg hover:bg-gray-50 transition-colors font-bold tracking-wide uppercase disabled:opacity-50" disabled>
                ← Anterior
              </button>
              <button type="button" id="next-tab-btn" class="px-4 py-2 bg-black text-white rounded-lg hover:bg-gray-800 transition-colors font-bold tracking-wide uppercase">
                Siguiente →
              </button>
            </div>
            
            <div class="flex space-x-3">
              <button type="button" id="cancel-product-btn" 
                      class="px-6 py-2 text-black bg-white border-2 border-black rounded-lg hover:bg-gray-50 transition-colors font-bold tracking-wide uppercase">
                Cancelar
              </button>
              <button type="submit" id="save-product-btn" 
                      class="px-6 py-2 bg-black text-white rounded-lg hover:bg-gray-800 transition-colors font-bold tracking-wide uppercase">
                <span class="hidden" id="saving-text">Guardando...</span>
                <span id="save-text">Guardar Producto</span>
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

</Layout>

<script>
  import { initializeProductosPage } from '../../scripts/admin/productos';
  import { initProductModal } from '../../scripts/admin/product-modal';
  
  document.addEventListener('DOMContentLoaded', async function() {
    await initializeProductosPage();
    initProductModal();
  });
</script>
