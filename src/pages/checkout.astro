<Layout title="Checkout - M√©todos de Pago">
  <Header />
  <main class="min-h-screen bg-gray-50 pt-24 pb-12">
    <div class="max-w-4xl mx-auto px-4">
      <!-- Progress Steps -->
      <div class="mb-8">
        <div class="flex items-center justify-center space-x-4">
          <div class="flex items-center space-x-2">
            <div class="w-8 h-8 bg-black text-white rounded-full flex items-center justify-center text-sm font-bold">‚úì</div>
            <span class="text-sm font-bold text-gray-600 tracking-wide uppercase">Carrito</span>
          </div>
          <div class="w-16 h-0.5 bg-gray-300"></div>
          <div class="flex items-center space-x-2">
            <div class="w-8 h-8 bg-black text-white rounded-full flex items-center justify-center text-sm font-bold">2</div>
            <span class="text-sm font-bold text-black tracking-wide uppercase">Pago</span>
          </div>
          <div class="w-16 h-0.5 bg-gray-300"></div>
          <div class="flex items-center space-x-2">
            <div class="w-8 h-8 bg-gray-300 text-gray-500 rounded-full flex items-center justify-center text-sm font-bold">3</div>
            <span class="text-sm font-bold text-gray-500 tracking-wide uppercase">Confirmaci√≥n</span>
          </div>
        </div>
      </div>

      <div class="grid lg:grid-cols-3 gap-8">
        <!-- Payment Methods -->
        <div class="lg:col-span-2">
          <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
            <h2 class="text-xl font-bold text-black mb-6 tracking-wide uppercase">M√©todo de Pago</h2>
            
            <!-- Payment Method Selection -->
            <div class="space-y-4 mb-6">
              <!-- Stripe Card Payment -->
              <div class="payment-method-option" data-method="stripe">
                <label class="flex items-center p-4 border-2 border-gray-200 rounded-lg cursor-pointer hover:border-black transition-colors">
                  <input type="radio" name="payment_method" value="stripe" class="sr-only">
                  <div class="payment-method-indicator w-5 h-5 border-2 border-gray-300 rounded-full mr-3"></div>
                  <div class="flex-1">
                    <div class="flex items-center">
                      <div class="flex items-center space-x-2">
                        <svg class="w-8 h-5" viewBox="0 0 24 24" fill="none">
                          <rect x="2" y="4" width="20" height="16" rx="2" stroke="currentColor" stroke-width="2"/>
                          <rect x="2" y="8" width="20" height="2" fill="currentColor"/>
                        </svg>
                        <span class="font-medium text-gray-900">Tarjeta de Cr√©dito/D√©bito</span>
                      </div>
                      <div class="ml-auto flex space-x-1">
                        <img src="https://upload.wikimedia.org/wikipedia/commons/0/04/Visa.svg" alt="Visa" class="h-6">
                        <img src="https://upload.wikimedia.org/wikipedia/commons/2/2a/Mastercard-logo.svg" alt="Mastercard" class="h-6">
                      </div>
                    </div>
                    <p class="text-sm text-gray-500 mt-1">Paga de forma segura con tu tarjeta</p>
                  </div>
                </label>
              </div>

              <!-- PayPal Payment -->
              <div class="payment-method-option" data-method="paypal">
                <label class="flex items-center p-4 border-2 border-gray-200 rounded-lg cursor-pointer hover:border-blue-500 transition-colors">
                  <input type="radio" name="payment_method" value="paypal" class="sr-only">
                  <div class="payment-method-indicator w-5 h-5 border-2 border-gray-300 rounded-full mr-3"></div>
                  <div class="flex-1">
                    <div class="flex items-center">
                      <div class="flex items-center space-x-2">
                        <svg class="w-8 h-5 text-blue-600" viewBox="0 0 24 24" fill="currentColor">
                          <path d="M7.076 21.337H2.47a.641.641 0 0 1-.633-.74L4.944.901C5.026.382 5.474 0 5.998 0h7.46c2.57 0 4.578.543 5.69 1.81 1.01 1.15 1.304 2.42 1.012 4.287-.023.143-.047.288-.077.437-.983 5.05-4.349 6.797-8.647 6.797h-2.19c-.524 0-.968.382-1.05.9l-1.12 7.106zm14.146-14.42a3.35 3.35 0 0 0-.988-.3c-.45-.05-.99-.075-1.6-.075h-4.194c-.524 0-.968.382-1.05.9L12.277 12.5c-.082.518.25.937.774.937h1.859c3.185 0 5.688-1.29 6.417-5.02.298-1.52.138-2.795-.605-3.5z"/>
                        </svg>
                        <span class="font-medium text-gray-900">PayPal</span>
                      </div>
                    </div>
                    <p class="text-sm text-gray-500 mt-1">Paga con tu cuenta de PayPal</p>
                  </div>
                </label>
              </div>
            </div>

            <!-- Stripe Payment Form -->
            <div id="stripe-payment-form" class="payment-form hidden">
              <div class="border rounded-lg p-4 bg-gray-50">
                <h3 class="font-medium text-gray-900 mb-4">Pago con Tarjeta</h3>
                <p class="text-gray-600 mb-4">Completa tu informaci√≥n de env√≠o y haz clic en "Continuar al Pago". Ser√°s redirigido a una p√°gina segura de Stripe para completar tu pago.</p>
                <div class="bg-blue-50 border border-blue-200 rounded-lg p-3">
                  <div class="flex items-center">
                    <svg class="w-5 h-5 text-blue-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                    </svg>
                    <div>
                      <h4 class="text-sm font-medium text-blue-800">Pago Seguro con Stripe</h4>
                      <p class="text-sm text-blue-700 mt-1">Tu informaci√≥n de pago ser√° procesada de forma segura por Stripe.</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- PayPal Payment Form -->
            <div id="paypal-payment-form" class="payment-form hidden">
              <div class="border rounded-lg p-4 bg-gray-50">
                <h3 class="font-medium text-gray-900 mb-4">Pago con PayPal</h3>
                <p class="text-gray-600 mb-4">Completa tu informaci√≥n de env√≠o y usa el bot√≥n de PayPal a continuaci√≥n para pagar de forma segura.</p>
                <div id="paypal-button-container" class="max-w-xs">
                  <!-- PayPal button will be rendered here -->
                </div>
                <p class="text-xs text-gray-500 mt-2">
                  üí° Al usar PayPal, no necesitas hacer clic en "Realizar Pedido". El bot√≥n de PayPal procesar√° tu pago autom√°ticamente.
                </p>
              </div>
            </div>

            <!-- Shipping Address -->
            <div class="mt-8 pt-8 border-t">
              <h3 class="text-lg font-medium text-gray-900 mb-4">Direcci√≥n de Env√≠o</h3>
              <form id="shipping-form" class="grid grid-cols-2 gap-4">
                <div class="col-span-2">
                  <label class="block text-sm font-medium text-gray-700 mb-1">Nombre Completo</label>
                  <input type="text" name="recipient_name" required 
                         class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <div class="col-span-2">
                  <label class="block text-sm font-medium text-gray-700 mb-1">Direcci√≥n</label>
                  <input type="text" name="street" required 
                         class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Ciudad</label>
                  <input type="text" name="city" required 
                         class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Estado</label>
                  <input type="text" name="state" 
                         class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">C√≥digo Postal</label>
                  <input type="text" name="postal_code" required 
                         class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Pa√≠s</label>
                  <select name="country" class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option value="M√©xico">M√©xico</option>
                    <option value="Estados Unidos">Estados Unidos</option>
                    <option value="Espa√±a">Espa√±a</option>
                  </select>
                </div>
                <div class="col-span-2">
                  <label class="block text-sm font-medium text-gray-700 mb-1">Tel√©fono</label>
                  <input type="tel" name="phone" 
                         class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
              </form>
            </div>
          </div>
        </div>

        <!-- Order Summary -->
        <div class="lg:col-span-1">
          <div class="bg-white rounded-lg shadow-sm border p-6 sticky top-24">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Resumen del Pedido</h3>
            
            <div id="order-items" class="space-y-3 mb-4">
              <!-- Cart items will be loaded here -->
            </div>

            <div class="border-t pt-4 space-y-2">
              <div class="flex justify-between text-sm">
                <span class="text-gray-600">Subtotal</span>
                <span id="subtotal">$0.00</span>
              </div>
              <div class="flex justify-between text-sm">
                <span class="text-gray-600">Env√≠o</span>
                <span id="shipping">$0.00</span>
              </div>
              <div class="flex justify-between text-sm">
                <span class="text-gray-600">Impuestos</span>
                <span id="tax">$0.00</span>
              </div>
              <div class="border-t pt-2">
                <div class="flex justify-between font-bold text-lg">
                  <span>Total</span>
                  <span id="total">$0.00</span>
                </div>
              </div>
            </div>

            <!-- Payment Button (Controlled by checkout.ts) -->
            <div class="mt-6">
              <button 
                id="place-order-btn" 
                class="w-full bg-black text-white py-3 px-4 rounded-lg font-medium hover:bg-gray-800 transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
              >
                Realizar Pedido
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Loading Overlay -->
    <div id="loading-overlay" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden">
      <div class="flex items-center justify-center h-full">
        <div class="bg-white p-6 rounded-lg">
          <div class="flex items-center space-x-3">
            <div class="animate-spin rounded-full h-6 w-6 border-b-2 border-blue-600"></div>
            <span>Procesando pago...</span>
          </div>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<!-- Stripe.js - Always load this as it's needed for initialization -->
<script src="https://js.stripe.com/v3/"></script>

<style>
  /* Payment method selection styles */
  .payment-method-option input[type="radio"]:checked + .payment-method-indicator {
    background-color: #000;
    border-color: #000;
  }

  .payment-method-option input[type="radio"]:checked + .payment-method-indicator::after {
    content: '';
    display: block;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background-color: white;
    margin: auto;
    margin-top: 4px;
  }

  .payment-method-option:has(input[type="radio"]:checked) label {
    border-color: #000;
    background-color: #f8fafc;
  }
</style>

<!-- Payment scripts will be loaded dynamically with fallback to environment variables -->
<script>
  // Load payment scripts with backend configuration and environment fallback
  async function loadPaymentScripts() {
    try {
      // Import the environment configuration
      const { default: ENV } = await import('../config/env.js');
      
      console.log('üîÑ Loading payment scripts...');
      
      // Try to get backend configuration first
      let config = null;
      try {
        const { PAYMENTS_ENDPOINTS } = await import('../utils/api/endpoints.ts');
        const response = await fetch(PAYMENTS_ENDPOINTS.config);
        config = await response.json();
        console.log('‚úÖ Backend configuration loaded:', config);
      } catch (backendError) {
        console.warn('‚ö†Ô∏è Backend configuration not available, using environment variables');
      }
      
      // Load PayPal SDK - prioritize backend config, fallback to environment
      const paypalClientId = config?.paypal?.client_id || ENV.PAYPAL.CLIENT_ID;
      const paypalEnabled = config?.features?.paypal_enabled || ENV.PAYPAL.isConfigured();
      
      if (paypalEnabled && paypalClientId) {
        const paypalScript = document.createElement('script');
        paypalScript.src = ENV.PAYPAL.getSDKUrl();
        paypalScript.defer = true;
        paypalScript.onload = () => {
          console.log('‚úÖ PayPal SDK loaded successfully');
        };
        paypalScript.onerror = () => {
          console.error('‚ùå Failed to load PayPal SDK');
        };
        document.head.appendChild(paypalScript);
        
        console.log('üîÑ Loading PayPal SDK:', ENV.PAYPAL.getSDKUrl());
      } else {
        console.warn('‚ö†Ô∏è PayPal SDK not loaded - not configured or enabled');
      }
      
    } catch (error) {
      console.error('‚ùå Error loading payment scripts:', error);
    }
  }
  
  // Load scripts immediately
  loadPaymentScripts();
</script>

<script>
  document.addEventListener('DOMContentLoaded', async function() {
    // Import and initialize the existing checkout functionality
    const { initializeCheckoutPage } = await import('../scripts/checkout.ts');
    await initializeCheckoutPage();
  });
</script>
