---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout 
  title="Mi Perfil - StyleHub"
  description="Gestiona tu perfil, pedidos y configuración de cuenta en StyleHub."
>
  <Header />
  
  <main class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Header del perfil -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-8">
        <div class="flex items-center space-x-4">
          <div class="w-16 h-16 bg-black rounded-full flex items-center justify-center">
            <span class="text-white font-bold text-xl tracking-wide" id="user-initials">U</span>
          </div>
          <div>
            <h1 class="text-2xl font-bold text-black tracking-wide uppercase" id="user-name">Cargando...</h1>
            <p class="text-gray-600 font-medium" id="user-email">Cargando...</p>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-bold bg-black text-white tracking-wide uppercase" id="user-role">
              Cliente
            </span>
          </div>
        </div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
        <!-- Sidebar de navegación -->
        <div class="lg:col-span-1">
          <nav class="bg-white rounded-lg shadow-sm border border-gray-200">
            <div class="p-4">
              <h2 class="text-lg font-bold text-black mb-4 tracking-wide uppercase">Mi Cuenta</h2>
              <ul class="space-y-2">
                <li>
                  <button
                    data-tab="profile"
                    class="tab-button w-full text-left px-3 py-2 rounded-md text-sm font-bold text-white bg-black hover:bg-gray-800 tracking-wide uppercase"
                  >
                    Información Personal
                  </button>
                </li>
                <li>
                  <a
                    href="/mis-pedidos"
                    class="w-full text-left px-3 py-2 rounded-md text-sm font-medium text-gray-600 hover:bg-gray-50 tracking-wide uppercase inline-block"
                  >
                    Mis Pedidos
                  </a>
                </li>
                <li>
                  <button
                    data-tab="favorites"
                    class="tab-button w-full text-left px-3 py-2 rounded-md text-sm font-medium text-gray-600 hover:bg-gray-50 tracking-wide uppercase"
                  >
                    Favoritos
                  </button>
                </li>
                <li>
                  <button
                    data-tab="addresses"
                    class="tab-button w-full text-left px-3 py-2 rounded-md text-sm font-medium text-gray-600 hover:bg-gray-50 tracking-wide uppercase"
                  >
                    Direcciones
                  </button>
                </li>
                <li>
                  <button
                    data-tab="security"
                    class="tab-button w-full text-left px-3 py-2 rounded-md text-sm font-medium text-gray-600 hover:bg-gray-50 tracking-wide uppercase"
                  >
                    Seguridad
                  </button>
                </li>
                <li id="admin-nav" class="hidden">
                  <hr class="my-2 border-gray-200">
                  <a
                    href="/admin"
                    class="w-full inline-flex items-center px-3 py-2 rounded-md text-sm font-bold text-white bg-purple-600 hover:bg-purple-700 tracking-wide uppercase transition-colors"
                  >
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    Administración
                  </a>
                </li>
                <li>
                  <hr class="my-2 border-gray-200">
                  <button
                    id="logout-button"
                    class="w-full text-left px-3 py-2 rounded-md text-sm font-bold text-red-600 hover:bg-red-50 tracking-wide uppercase"
                  >
                    Cerrar Sesión
                  </button>
                </li>
              </ul>
            </div>
          </nav>
        </div>

        <!-- Contenido principal -->
        <div class="lg:col-span-3">
          <!-- Tab: Información Personal -->
          <div id="profile-tab" class="tab-content bg-white rounded-lg shadow-sm p-6">
            <h3 class="text-lg font-medium text-neutral-900 mb-6">Información Personal</h3>
            <form id="profile-form" class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="full_name" class="block text-sm font-medium text-neutral-700">
                    Nombre completo
                  </label>
                  <input
                    type="text"
                    id="full_name"
                    name="full_name"
                    class="mt-1 block w-full border-neutral-300 rounded-md shadow-sm focus:ring-primary-500 focus:border-primary-500 sm:text-sm"
                  />
                </div>
                <div>
                  <label for="email" class="block text-sm font-medium text-neutral-700">
                    Email
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    readonly
                    class="mt-1 block w-full border-neutral-300 rounded-md shadow-sm bg-neutral-50 sm:text-sm"
                  />
                </div>
                <div>
                  <label for="phone" class="block text-sm font-medium text-neutral-700">
                    Teléfono
                  </label>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    class="mt-1 block w-full border-neutral-300 rounded-md shadow-sm focus:ring-primary-500 focus:border-primary-500 sm:text-sm"
                  />
                </div>
                <div>
                  <label for="date_of_birth" class="block text-sm font-medium text-neutral-700">
                    Fecha de nacimiento
                  </label>
                  <input
                    type="date"
                    id="date_of_birth"
                    name="date_of_birth"
                    class="mt-1 block w-full border-neutral-300 rounded-md shadow-sm focus:ring-primary-500 focus:border-primary-500 sm:text-sm"
                  />
                </div>
              </div>
              <div class="flex justify-end">
                <button
                  type="submit"
                  class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
                >
                  Guardar Cambios
                </button>
              </div>
            </form>
          </div>

          <!-- Tab: Mis Pedidos -->
          <div id="orders-tab" class="tab-content hidden bg-white rounded-lg shadow-sm p-6">
            <h3 class="text-lg font-medium text-neutral-900 mb-6">Mis Pedidos</h3>
            <div id="orders-list" class="space-y-4">
              <div class="text-center py-8">
                <div class="text-neutral-400 mb-2">
                  <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                  </svg>
                </div>
                <p class="text-neutral-500">Cargando pedidos...</p>
              </div>
            </div>
          </div>

          <!-- Tab: Favoritos -->
          <div id="favorites-tab" class="tab-content hidden bg-white rounded-lg shadow-sm p-6">
            <h3 class="text-lg font-medium text-neutral-900 mb-6">Productos Favoritos</h3>
            <div id="favorites-list" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
              <div class="text-center py-8 col-span-full">
                <div class="text-neutral-400 mb-2">
                  <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                  </svg>
                </div>
                <p class="text-neutral-500">Cargando favoritos...</p>
              </div>
            </div>
          </div>

          <!-- Tab: Direcciones -->
          <div id="addresses-tab" class="tab-content hidden bg-white rounded-lg shadow-sm p-6">
            <div class="flex justify-between items-center mb-6">
              <h3 class="text-lg font-medium text-neutral-900">Mis Direcciones</h3>
              <button id="add-address-btn" class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700">
                Agregar Dirección
              </button>
            </div>
            <div id="addresses-list" class="space-y-4">
              <div class="text-center py-8">
                <div class="text-neutral-400 mb-2">
                  <svg class="w-12 h-12 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <p class="text-neutral-500">No tienes direcciones guardadas</p>
              </div>
            </div>
          </div>

          <!-- Tab: Seguridad -->
          <div id="security-tab" class="tab-content hidden bg-white rounded-lg shadow-sm p-6">
            <h3 class="text-lg font-medium text-neutral-900 mb-6">Configuración de Seguridad</h3>
            <form id="password-form" class="space-y-6">
              <div>
                <label for="current_password" class="block text-sm font-medium text-neutral-700">
                  Contraseña actual
                </label>
                <input
                  type="password"
                  id="current_password"
                  name="current_password"
                  required
                  class="mt-1 block w-full border-neutral-300 rounded-md shadow-sm focus:ring-primary-500 focus:border-primary-500 sm:text-sm"
                />
              </div>
              <div>
                <label for="new_password" class="block text-sm font-medium text-neutral-700">
                  Nueva contraseña
                </label>
                <input
                  type="password"
                  id="new_password"
                  name="new_password"
                  required
                  minlength="8"
                  class="mt-1 block w-full border-neutral-300 rounded-md shadow-sm focus:ring-primary-500 focus:border-primary-500 sm:text-sm"
                />
              </div>
              <div>
                <label for="confirm_password" class="block text-sm font-medium text-neutral-700">
                  Confirmar nueva contraseña
                </label>
                <input
                  type="password"
                  id="confirm_password"
                  name="confirm_password"
                  required
                  class="mt-1 block w-full border-neutral-300 rounded-md shadow-sm focus:ring-primary-500 focus:border-primary-500 sm:text-sm"
                />
              </div>
              <div class="flex justify-end">
                <button
                  type="submit"
                  class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
                >
                  Cambiar Contraseña
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<script>
  import { initializeProfile } from '../scripts/profile';
  
  document.addEventListener('DOMContentLoaded', function() {
    initializeProfile();
  });
</script>